<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <record id="weather_arelux_better_zip_tree" model="ir.ui.view">
        <field name="name">weather_arelux_better_zip_tree</field>
        <field name="model">res.better.zip</field>
        <field name="inherit_id" ref="base_location.better_zip_tree" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="country_id" position="after">
                <field name="weather_station_uuid" readonly="1"/>                                
            </field>                                                
        </field>
    </record>
    <record id="weather_arelux_better_zip_form" model="ir.ui.view">
        <field name="name">weather_arelux_better_zip_form</field>
        <field name="model">res.better.zip</field>
        <field name="inherit_id" ref="base_location.better_zip_form" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="country_id" position="after">
                <field name="weather_station_uuid" readonly="1"/>                                
            </field>                                                
        </field>
    </record>                       
</odoo>
