<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="arelux_questionarie_shipping_expedition_form_view" model="ir.ui.view">
        <field name="name">arelux_questionarie_shipping_expedition_form_view</field>
        <field name="model">shipping.expedition</field>
        <field name="inherit_id" ref="base_delivery_carrier_expedition.shipping_expedition_form_view" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="picking_id" position="before">
                <field name="ar_qt_activity_type" attrs="{'readonly': True}" />
                <field name="ar_qt_customer_type" attrs="{'readonly': True}" />
            </field>                                                            
        </field>
    </record>
    <record id="arelux_questionarie_shipping_expedition_tree" model="ir.ui.view">
        <field name="name">arelux_questionarie_shipping_expedition_tree</field>
        <field name="model">shipping.expedition</field>
        <field name="inherit_id" ref="base_delivery_carrier_expedition.shipping_expedition_tree" />
        <field name="priority" eval="20"/>                
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="ar_qt_activity_type"/>
                <field name="ar_qt_customer_type"/>
            </field>                                                            
        </field>
    </record>
    <record id="view_shipping_expedition_search_arelux_partner_questionnaire" model="ir.ui.view">
        <field name="name">view_shipping_expedition_search_arelux_partner_questionnaire</field>
        <field name="model">shipping.expedition</field>
        <field name="inherit_id" ref="base_delivery_carrier_expedition.view_shipping_expedition_search" />
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_shipping_expeditions_filter']" position="after">
                <separator/>
                <filter string="Particulares" name="type_contacts" domain="[('ar_qt_customer_type','=','particular')]"/>
                <filter string="Profesionales" name="type_contacts" domain="[('ar_qt_customer_type','=','profesional')]"/>
                <separator/>
                <filter string="Todocesped" name="type_contacts" domain="[('ar_qt_activity_type','=','todocesped')]"/>
                <filter string="Arelux" name="type_contacts" domain="[('ar_qt_activity_type','=','arelux')]"/>
                <filter string="Evert" name="type_contacts" domain="[('ar_qt_activity_type','=','evert')]"/>
                <separator/>
            </xpath>                                                                                                                
        </field>
    </record>                
</odoo>